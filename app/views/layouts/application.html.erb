			<li><%= link_to image_tag('twitter.png'), 'http://twitter.com', :alt => "twitter", :title => "twitter" %></li>
			<li><%= link_to image_tag('gmail.png'), 'http://gmail.com', :alt => "email", :title => "our email" %></li>
		</ul>
	</nav>
	<div class="container">
		<div class="topmenu">
		  <ul>
			<li><%= link_to_unless_current "Home", root_path do link_to "Home", root_path, :id => "current" end %></li>
			<li><%= link_to_unless_current "Module", "/module" do link_to "Module", "/module", :id => "current" end %></li>
			<li><%= link_to_unless_current "Feature", '/feature' do link_to "Feature", '/feature', :id => "current" end %></li>
			<li><%= link_to_unless_current "About", "/application" do link_to "About", '/about', :id => "current" end %></li>
			<li><%= link_to_unless_current "Contact", '/contact' do link_to "Contact", '/contact', :id => "current" end %></li>
			<li><%= link_to_unless_current "FAQs", '/faqs' do link_to "FAQS", '/faqs', :id => "current" end %></li>
			<li><%= link_to_unless_current "Demo", '/demo' do link_to "Demo", '/demo', :id => "current" end %></li>			
		  </ul>
		</div>
		<%= yield %>
	</div>
	<footer>
		<ul id="nav">
			<li><a href="/" class="first">Home</a></li>
			<li><a href="/module">Module</a></li>
			<li><a href="/feature">Feature</a></li>
			<li><a href="/about">About</a>
